<aura:component >
    <aura:attribute name="Income" type="Object"/>
    <aura:attribute name="Columns" type="List"/>
    
    <aura:registerEvent name="TotalIncomecmpEvent" type="c:LightCmpEvent"></aura:registerEvent>
    <aura:handler name="TotalIncomecmpEvent" event="c:LightCmpEvent" action="{!c.handlecmpEvent}"/>
   
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
     
    <lightning:card title="Expenses Report" iconName="standard:opportunity">
   		 
        <aura:set attribute="actions" >
            <lightning:button label="Show/Hide " 
                          onclick="{!c.toggleIncomeform}" variant="brand" >
        </lightning:button>           
        </aura:set> 
        
        <p class = "slds-p-horizontal_small">
        	<div aura:id = "incomeForm"  class = "hide">
            	<lightning:Input aura:id="Source" name="Source" required="true" label="Income Source"></lightning:Input>
            	<lightning:Input aura:id="Amount" name="Amount" required="true" label="Amount"></lightning:Input>
                <br/>
                <lightning:button name="addIncome " 
                                  label="Add Income" 
                                  onclick="{!c.addIncome}"
                                  variant="destructive"/>
            </div>
            <br/>
            <lightning:datatable data="{!v.Income}"
                                 columns="{!v.Columns}"
                                 keyField="SNo" />
            <br/>
            <lightning:button name="Calculate Income"
                              label="CalcTotalIncome" 
                              onclick="{!c.fireTotalIncomeEvent}" 
                              variant="success"/>
        </p>
    </lightning:card>
</aura:component>